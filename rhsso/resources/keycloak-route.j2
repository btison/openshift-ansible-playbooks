---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: {{ rhsso_route_name }}
  labels:
    app: sso
  annotations:
    openshift.io/host.generated: 'true'
spec:
  to:
    kind: Service
    name: keycloak
    weight: 100
  port:
    targetPort: keycloak
  tls:
    termination: reencrypt
    insecureEdgeTerminationPolicy: Redirect
  wildcardPolicy: None
